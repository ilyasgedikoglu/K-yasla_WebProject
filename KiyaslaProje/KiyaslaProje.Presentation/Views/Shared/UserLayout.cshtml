<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/ustora/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/ustora/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/ustora/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/ustora/style.css">
    <link rel="stylesheet" href="~/Content/ustora/css/responsive.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div>
        @Html.Action("_userHeaderPartial", "Home")
        @Html.Action("_userSliderPartial", "Home")

        @RenderBody()



        <div class="footer-top-area">
            <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <div class="footer-about-us">
                            <h2>KI<span>YASLA</span></h2>
                            <p>Sosyal Medya Adreslerimiz</p>
                            <div class="footer-social">
                                <a href="https://www.facebook.com/igedikoglugs/" target="_blank"><i class="fa fa-facebook"></i></a>
                                <a href="https://twitter.com/ilyas_gedikoglu/" target="_blank"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.instagram.com/thegedikoglu/" target="_blank"><i class="fa fa-instagram"></i></a>
                                <a href="https://www.linkedin.com/in/ilyas-gedikoğlu-282660147/" target="_blank"><i class="fa fa-linkedin"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="footer-menu">
                            <h2 class="footer-wid-title">MENÜ</h2>
                            <ul>
                                <li><a href="#">Ana Sayfa</a></li>
                                <li><a href="#">Ürünler</a></li>
                                <li><a href="#">Haberler</a></li>
                            </ul>
                        </div>
                    </div>

                    @model KiyaslaProje.Common.ViewModels.ComplaintVM


                    @using (Html.BeginForm("CreateComplaint", "Home", FormMethod.Post))
                    {
                        <div class="col-md-6 col-sm-6">

                            <h2 class="footer-wid-title">BANA ULAŞ</h2>
                            <p>İstek ve Şikayetleriniz İçin Bize Ulaşın</p>
                            <!-- form start -->
                            <div class="form-horizontal">
                                <div class="box-body">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Name, new { @placeholder = "Adınız", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.SurName, new { @placeholder = "Soyadınız", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "E-mail Adresiniz", @type = "email", @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.Detail, new { @placeholder = "Mesajınız", @class = "form-control" })
                                    </div>

                                    <button type="submit" class="btn btn-info pull-right">Gönder</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- End footer top area -->

        <div class="footer-bottom-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="copyright">
                            <p>&copy; 2018 İlyas Gedikoğlu. All Rights Reserved. <a href="http://www.ilyasgedikoglu.com" target="_blank">ilyasgedikoglu.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End footer bottom area -->
    </div>

    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Content/ustora/js/owl.carousel.min.js"></script>
    <script src="~/Content/ustora/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Content/ustora/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Content/ustora/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="~/Content/ustora/js/bxslider.min.js"></script>
    <script type="text/javascript" src="~/Content/ustora/js/script.slider.js"></script>
</body>
</html>
