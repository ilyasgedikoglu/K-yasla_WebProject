@model IEnumerable<KiyaslaProje.Common.ViewModels.CategoryVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Kategoriler</h3>
                        <h4>@Html.ActionLink("Yeni Kategori Ekle","Create","Category")</h4>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Resim</th>
                                    <th>Ad</th>
                                    <th>Detay</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Oluşturan Kişi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><img src="~/image/@item.PicturePath" class="img img-thumbnail" width="150" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.Detail</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.CreatorId</td>
                                    <td>
                                        @Html.ActionLink("Sil", "Delete", "Category", new { id = item.Id }, new { @class = "btn btn-danger" })
                                        @Html.ActionLink("Düzenle", "Edit", "Category", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Resim</th>
                                    <th>Ad</th>
                                    <th>Detay</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Oluşturan Kişi</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

