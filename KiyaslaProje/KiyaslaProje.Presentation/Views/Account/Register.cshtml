@model KiyaslaProje.Presentation.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <body class="hold-transition register-page">
        <div class="register-box">
            <div class="register-logo">
                <a href="~/Account/Register"><b>KIYAS</b>LA</a>
            </div>
            <div class="register-box-body">
                <p class="login-box-msg">Üye Olmak İçin Daha Ne Bekliyorsun</p>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Adınız", @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.SurName, new { @placeholder = "Soyadınız", @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = " Kullanıcı Adınız", @class = "form-control" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "E-posta Adresiniz", @class = "form-control" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Şifreniz", @class = "form-control" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Tekrar Şifreniz", @class = "form-control" })
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"><a href="#"><b>Koşulları</b></a> kabul ediyorum
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                    </div>
                </div>
                <div class="social-auth-links text-center">
                    <p>- VEYA -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Facebook ile Kaydolmak İster misin?
                    </a>
                </div>
                Hesabın var mı?   <a href="~/Account/Login" class="text-center"><b>Giriş Yap</b></a>
            </div>
        </div>
    </body>
}
