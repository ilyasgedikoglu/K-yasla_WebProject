@model IEnumerable<KiyaslaProje.Common.ViewModels.ProductDetailVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Ürün Detayları</h3>
                        <h4>@Html.ActionLink("Yeni Ürün Detayı Ekle", "Create", "ProductDetail")</h4>
                    </div>
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ürün Id</th>
                                    <th>Oluşturan Kişi</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.CreatorId</td>
                                        <td>@item.CreatedDate</td>
                                        <td>
                                            @Html.ActionLink("Sil", "Delete", "ProductDetail", new { id = item.Id }, new { @class = "btn btn-danger" })
                                            @Html.ActionLink("Düzenle", "Edit", "ProductDetail", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ürün Id</th>
                                    <th>Oluşturan Kişi</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


