@model KiyaslaProje.Common.ViewModels.ProductVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">@Html.DisplayFor(m => m.Title) Ürününü Düzenliyorsun</h3>
                        </div>
                        <div class="box-body">
                            <div class="col-md-12">
                                <div class="col-md-4">@Html.LabelFor(m => m.Title)</div>
                                <div class="form-control">@Html.TextBoxFor(m => m.Title, new { @class = "col-md-8" })</div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">@Html.LabelFor(m => m.Detail)</div>
                                <div class="form-control">@Html.TextBoxFor(m => m.Detail, new { @class = "col-md-8" })</div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">@Html.LabelFor(m => m.CreatorId)</div>
                                <div class="form-control">@Html.DropDownListFor(m => m.CreatorId, new SelectList(ViewBag.Users, "Id", "Name"), new { @class = "col-md-8" })</div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">@Html.LabelFor(m => m.CategoryId)</div>
                                <div class="form-control">@Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "Title"), new { @class = "col-md-8" })</div>
                            </div>

                            <div class="col-md-12">
                                <div class="col-md-4"><label></label></div>
                                <div class="form-control, col-md-8"><input type="submit" value="Kayıt Et" /></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
}



